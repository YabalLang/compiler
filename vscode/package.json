{
    "private": true,
    "name": "vscode-yabal",
    "displayName": "Yabal",
    "description": "Language server support for Yabal",
    "repository": {
        "type": "git",
        "url": "https://github.com/GerardSmit/Astro8.git"
    },
    "license": "MIT",
    "version": "0.0.1",
    "publisher": "GerardSmit",
    "author": "GerardSmit",
    "keywords": [
        "yabal",
        "astro8"
    ],
    "scripts": {
        "build": "dotnet publish ../src/Yabal.LanguageServer/Yabal.LanguageServer.csproj -o extension/bin && rollup -c",
        "watch": "rollup -c -w --env=dev"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.2",
        "@rollup/plugin-node-resolve": "^14.0.1",
        "@rollup/plugin-replace": "^4.0.0",
        "@rollup/plugin-typescript": "^8.2.5",
        "@types/node": "^18.7.16",
        "@types/vscode": "^1.1.53",
        "rollup": "^2.56.3",
        "tslib": "^2.4.0",
        "typescript": "^4.8.3"
    },
    "main": "./extension/index",
    "engines": {
        "vscode": "^1.52.0"
    },
    "activationEvents": [
        "onLanguage:yabal"
    ],
    "capabilities": {
        "completionProvider": {
            "resolveProvider": "true",
            "triggerCharacters": [
                "\""
            ]
        }
    },
    "contributes": {
        "languages": [
            {
                "id": "yabal",
                "aliases": [
                    "Yabal"
                ],
                "extensions": [
                    ".yabal"
                ]
            }
        ],
        "grammars": [
            {
                "language": "yabal",
                "scopeName": "source.yabal",
                "path": "./syntaxes/yabal.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode-jsonrpc": "^8.0.2",
        "vscode-languageclient": "^8.0.2"
    },
    "extensionDependencies": [
        "ms-dotnettools.vscode-dotnet-runtime"
    ]
}
